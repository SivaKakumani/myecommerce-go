pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git branch
                git branch: 'venkat', credentialsId: 'github-credentials', url:'https://github.com/SivaKakumani/myecommerce-go.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the Docker image locally
                    powershell 'docker build -t myecommerce-go .'
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    // Stop and remove any existing container with the same name
                    // sh 'docker stop myecommerce-ui || true'
                    // sh 'docker rm myecommerce-ui || true'

                    // Run the Docker container
                    powershell '$ docker run -d --network python-mysql-network -p 8082:8082 --name myecommerce-go myecommerce-go'
                }
            }
        }
    }
}
